@model Item

<h2>Edit</h2>

<form asp-action="Edit" method="post">
    <div class="form-group row mt-3">
        <label for="Name" class="col-sm-2 col-form-label">Name:</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" autocomplete="off" value="@Model.Name" />
        </div>
    </div>
    <div class="form-group row mt-3">
        <label for="Description" class="col-sm-2 col-form-label">Description:</label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" autocomplete="off" value="@Model.Description" />
        </div>
    </div>
    <div class="form-group row mt-3">
        <label for="Price" class="col-sm-2 col-form-label">Price:</label>
        <div class="col-sm-10">
            <input type="number" min="0" step="5" asp-for="Price" class="form-control" autocomplete="off" />
        </div>
    </div>
    <div class="form-group row mt-4">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>